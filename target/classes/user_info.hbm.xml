<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
 	<class name="com.EntityClasses.User_Info" table="user_info">
 	 	
 	 <id name="id" column="id" >    
 	    <generator class="identity"/>    
 	 </id>
    <property name="name" column="name"/>
    <property name="batch" column="batch"/>
    <property name="semester" column="semester"/>
    <property name="email" column="email"/>
    <property name="password" column="password"/>
    <property name="user_type" column="user_type"/>
    <property name="created_at" column="created_at"/>
    <property name="updated_at" column="updated_at"/>
 	</class>
</hibernate-mapping>