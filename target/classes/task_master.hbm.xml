<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
 	<class name="com.EntityClasses.Task_Master" table="task_master">
 	 	
 	 <id name="id" column="id" >    
 	    <generator class="identity"/>    
 	 </id>
 	 	
    <many-to-one name="project_id" class="com.EntityClasses.Project_Master" fetch="select">
                <column name="project_id" not-null="true" />
        </many-to-one>
    <property name="name" column="name"/>
    <property name="assigned_to" column="assigned_to"/>
    <property name="description" column="description"/>
    <property name="status" column="status"/>
    <property name="time_spend" column="time_spend"/>
    <property name="deadline" column="deadline"/>
    <property name="start_date" column="start_date"/>
    <property name="end_date" column="end_date"/>
    <property name="created_at" column="created_at"/>
    <property name="updated_at" column="updated_at"/>
 	</class>
</hibernate-mapping>